<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mechoori.web.repository.MenuRepository">
	<select id="findAll" resultType="Menu">
		select *
        from menu
        where restaurant_id = #{restaurantId};
	</select>
	<select id="findById" resultType="Menu">
		select *
		from menu
		where id = #{menuId}
	</select>
	<update id="update" parameterType="Menu">
	update menu 
	set cumulative_rated_price = #{cumulativeRatedPrice}
	where id = #{id}
	</update>
	<select id="getRanking" resultType="Menu">
		SELECT *
		FROM menu
		ORDER BY cumulative_rated_price DESC;
	</select>


</mapper>