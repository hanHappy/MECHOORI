<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mechoori.web.repository.RestaurantLikeRepository">

	<select id="findAll" resultType="LikeList">
		select
			*
		from
			like_list_view
		where
			member_id = #{memberId}
	</select>

	<insert id="add" parameterType="RestaurantLike">
		insert into 
        restaurant_like(member_id, restaurant_id)
		values(#{memberId}, #{restaurantId})
	</insert>

	<select id="count" resultType="int">
		select 
			count(restaurant_id) 
		from restaurant_like 
		where restaurant_id=#{restaurantId}
	</select>

	<delete id="delete" parameterType="RestaurantLike">
		delete from restaurant_like
		where member_id=#{memberId} and restaurant_id=#{restaurantId}
	</delete>

</mapper>