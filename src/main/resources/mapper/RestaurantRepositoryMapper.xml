<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mechoori.web.repository.RestaurantRepository">
	<select id="findAllByCtgId" resultType="Restaurant">
		select *
		from restaurant
		where category_id = #{categoryId};
	</select>
	<select id="findById" resultType="Restaurant">
		select * 
		from restaurant
		where id = #{restaurantId}
	</select>
	<select id="findAllRestaurantCard" resultType="RestaurantCard">
		select *
		from restaurant_card
	</select>
	<select id="findAllRestaurantCardByCtgId" resultType="RestaurantCard">
		select *
		from restaurant_card
		where category_id = #{categoryId}
	</select>
	<select id="findAllRestaurantCardByQuery" resultType="RestaurantCard">
		select *
		from restaurant_card
		where name like '%${query}%'
	</select>
		<select id="findRestaurantDetailById" resultType="RestaurantDetail">
		select * 
		from restaurant_detail
		where id = #{restaurantId}
	</select>
</mapper>