<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mechoori.web.repository.RestaurantRepository">
	<select id="findAll" resultType="com.mechoori.web.entity.Restaurant">
		select *
		from restaurant
		where category_id = #{categoryId};
	</select>
	<!-- TODO : 패키지 간소화 -->
	<select id="findById" resultType="com.mechoori.web.entity.Restaurant">
		select * 
		from restaurant
		where id = #{restaurantId}
	</select>
	<select id="findMenuListByRestaurantId" resultType="com.mechoori.web.entity.Menu">
		select * 
		from menu
		where restaurant_id = #{restaurantId}
	</select>
</mapper>