<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mechoori.web.repository.MemberRepository">
	<select id="findById" resultType="Member">
		select * from member where id=#{id}
	</select>
	<select id="findByUsername" resultType="Member">
      select * from member where username=#{username}
   </select>
	<select id="findRoleByUsername" resultType="String">
      select role_name from member_with_role where username = #{username}
   </select>
</mapper>